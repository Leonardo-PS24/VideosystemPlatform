@model Platform.Apps.KioskConfiguration.Models.KioskConfigurationEntity

@{
    ViewData["Title"] = $"Modifica Configurazione - {Model.SerialNumber}";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="page-title">
            <span class="material-icons align-middle me-2">edit</span>
            Modifica Configurazione Kiosk
        </h2>
        <a asp-controller="Configuration" asp-action="Index" class="btn btn-outline-secondary">
            <span class="material-icons align-middle">arrow_back</span>
            Torna alla Lista
        </a>
    </div>
</div>

<div class="content-card">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span class="material-icons align-middle">check_circle</span>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span class="material-icons align-middle">error</span>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Informazioni Configurazione -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h5 class="mb-3">Informazioni Generali</h5>
            <table class="table table-sm">
                <tr>
                    <th style="width: 150px;">Serial Number:</th>
                    <td><strong>@Model.SerialNumber</strong></td>
                </tr>
                <tr>
                    <th>Template:</th>
                    <td>@(Model.Template?.TemplateName ?? "N/D") <small class="text-muted">(v@(Model.Template?.Version ?? "N/D"))</small></td>
                </tr>
                <tr>
                    <th>Stato Attuale:</th>
                    <td>
                        @switch (Model.Status)
                        {
                            case "Draft":
                                <span class="badge bg-secondary">Bozza</span>
                                break;
                            case "InProgress":
                                <span class="badge bg-primary">In Lavorazione</span>
                                break;
                            case "Completed":
                                <span class="badge bg-success">Completata</span>
                                break;
                            case "Approved":
                                <span class="badge bg-info">Approvata</span>
                                break;
                            case "Rejected":
                                <span class="badge bg-danger">Rifiutata</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@Model.Status</span>
                                break;
                        }
                    </td>
                </tr>
                <tr>
                    <th>Creata il:</th>
                    <td>@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
                @if (Model.CompletedAt != null)
                {
                    <tr>
                        <th>Completata il:</th>
                        <td>@Model.CompletedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <th>Completata da:</th>
                        <td>@Model.CompletedBy</td>
                    </tr>
                }
            </table>
        </div>

        <div class="col-md-6">
            <h5 class="mb-3">Azioni</h5>
            <div class="d-grid gap-2">
                <form method="post" asp-controller="Configuration" asp-action="Edit" asp-route-id="@Model.Id">
                    @Html.AntiForgeryToken()

                    @if (Model.Status == "Draft")
                    {
                        <button type="submit" name="status" value="InProgress" class="btn btn-primary">
                            <span class="material-icons align-middle">play_arrow</span>
                            Inizia Lavorazione
                        </button>
                    }

                    @if (Model.Status == "InProgress")
                    {
                        <button type="submit" name="status" value="Completed" class="btn btn-success">
                            <span class="material-icons align-middle">check_circle</span>
                            Segna come Completata
                        </button>
                        <button type="submit" name="status" value="Draft" class="btn btn-secondary">
                            <span class="material-icons align-middle">undo</span>
                            Torna a Bozza
                        </button>
                    }

                    @if (Model.Status == "Completed")
                    {
                        <button type="submit" name="status" value="Approved" class="btn btn-info">
                            <span class="material-icons align-middle">thumb_up</span>
                            Approva
                        </button>
                        <button type="submit" name="status" value="Rejected" class="btn btn-warning">
                            <span class="material-icons align-middle">thumb_down</span>
                            Rifiuta
                        </button>
                        <button type="submit" name="status" value="InProgress" class="btn btn-secondary">
                            <span class="material-icons align-middle">undo</span>
                            Torna In Lavorazione
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <!-- Campi Configurazione -->
    <h5 class="mb-3">Campi Configurazione</h5>

    <div class="alert alert-info">
        <span class="material-icons align-middle">construction</span>
        <strong>Sezione in sviluppo:</strong> I campi specifici del template verranno caricati e compilati nelle prossime versioni.
        Per ora puoi gestire lo stato della configurazione utilizzando i pulsanti sopra.
    </div>

    @if (Model.FieldValues.Any())
    {
        <div class="table-responsive">
            <table class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th>Campo</th>
                        <th>Valore</th>
                        <th>Aggiornato</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var field in Model.FieldValues)
                    {
                        <tr>
                            <td>@field.FieldPath</td>
                            <td>@(field.IsEncrypted ? "******" : field.FieldValue)</td>
                            <td>@field.UpdatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted text-center py-3">
            <span class="material-icons d-block mb-2" style="font-size: 48px; color: #ccc;">description</span>
            Nessun campo compilato
        </p>
    }
</div>

@section Scripts {
    <script>
        console.log('Edit page loaded for configuration: @Model.Id');
    </script>
}
