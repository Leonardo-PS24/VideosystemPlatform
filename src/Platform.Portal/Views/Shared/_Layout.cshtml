<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Videosystem Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Layout con Sidebar per utenti autenticati -->
        <div class="wrapper">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <div class="logo">
                        <span class="material-icons">layers</span>
                        <span class="logo-text">Videosystem</span>
                    </div>
                </div>
                
                <nav class="sidebar-nav">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <span class="material-icons">dashboard</span>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Users">
                                    <span class="material-icons">people</span>
                                    <span>Gestione Utenti</span>
                                </a>
                            </li>
                        }
                        
                        <li class="nav-divider">
                            <span>Applicazioni</span>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link disabled">
                                <span class="material-icons">computer</span>
                                <span>Kiosk Registration</span>
                                <span class="badge bg-secondary ms-auto">Presto</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                
                <div class="sidebar-footer">
                    <div class="user-info">
                        <div class="user-avatar">
                            <span class="material-icons">account_circle</span>
                        </div>
                        <div class="user-details">
                            <div class="user-name">@User.Identity.Name</div>
                            <div class="user-role">@(User.IsInRole("Admin") ? "Amministratore" : "Utente")</div>
                        </div>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                        <button type="submit" class="btn btn-logout w-100">
                            <span class="material-icons">logout</span>
                            <span>Esci</span>
                        </button>
                    </form>
                </div>
            </aside>
            
            <!-- Main Content -->
            <main class="main-content">
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row align-items-center">
                            <div class="col">
                                <h1 class="page-title">@ViewData["Title"]</h1>
                                @if (ViewData["Subtitle"] != null)
                                {
                                    <p class="page-subtitle">@ViewData["Subtitle"]</p>
                                }
                            </div>
                            <div class="col-auto">
                                @RenderSection("HeaderActions", required: false)
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="content-body">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
                
                <footer class="content-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-0">&copy; 2024 Videosystem S.r.l.</p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <p class="mb-0">Via Lago di Albano, 45 | 36015 Schio - Italia</p>
                            </div>
                        </div>
                    </div>
                </footer>
            </main>
        </div>
    }
    else
    {
        <!-- Layout semplice per pagine non autenticate (login) -->
        <main role="main">
            @RenderBody()
        </main>
    }
    
    <!-- Bootstrap 5 - Non richiede jQuery -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
