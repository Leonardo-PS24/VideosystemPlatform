<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Videosystem Platform</title>
    
    <!-- Bootstrap 5 CSS - LOCALE -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    
    <!-- Google Fonts - Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Layout con Sidebar per utenti autenticati -->
        <div class="wrapper">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <div class="logo">
                        <span class="material-icons">layers</span>
                        <span class="logo-text">Videosystem</span>
                    </div>
                    <button class="sidebar-toggle" onclick="toggleSidebar()">
                        <span class="material-icons">menu</span>
                    </button>
                </div>
                
                <nav class="sidebar-nav">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <span class="material-icons">dashboard</span>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")" 
                                   asp-controller="Admin" asp-action="Users">
                                    <span class="material-icons">people</span>
                                    <span>Gestione Utenti</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Permissions" ? "active" : "")" 
                                   asp-controller="Permissions" asp-action="Index">
                                    <span class="material-icons">security</span>
                                    <span>Gestione Permessi</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                
                <div class="sidebar-footer">
                    <div class="user-info">
                        <div class="user-avatar">
                            <span class="material-icons">account_circle</span>
                        </div>
                        <div class="user-details">
                            <div class="user-name">@User.Identity.Name</div>
                            <div class="user-role">@(User.IsInRole("Admin") ? "Amministratore" : "Utente")</div>
                        </div>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                        <button type="submit" class="btn btn-logout w-100">
                            <span class="material-icons">logout</span>
                            <span>Esci</span>
                        </button>
                    </form>
                </div>
            </aside>
            
            <!-- Main Content -->
            <main class="main-content">
                @if (ViewData["HidePageHeader"] == null || !(bool?)ViewData["HidePageHeader"] == true)
                {
                    <div class="content-header">
                        <div class="container-fluid">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h1 class="page-title">@ViewData["Title"]</h1>
                                    @if (ViewData["Subtitle"] != null)
                                    {
                                        <p class="page-subtitle">@ViewData["Subtitle"]</p>
                                    }
                                </div>
                                <div class="col-auto">
                                    @RenderSection("HeaderActions", required: false)
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                <div class="content-body">
                    <div class="container-fluid">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <span class="material-icons align-middle me-2">check_circle</span>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <span class="material-icons align-middle me-2">error</span>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        
                        @RenderBody()
                    </div>
                </div>
                
                <footer class="content-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-0">&copy; @DateTime.Now.Year Videosystem S.r.l.</p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <p class="mb-0">Via Lago di Albano, 45 | 36015 Schio - Italia</p>
                            </div>
                        </div>
                    </div>
                </footer>
            </main>
        </div>
    }
    else
    {
        <!-- Layout semplice per pagine non autenticate (login) -->
        <div class="login-wrapper">
            @RenderBody()
        </div>
    }
    
    <!-- Bootstrap 5 JS Bundle - LOCALE (non richiede jQuery) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Funzione per toggle sidebar
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
            // Salva lo stato nel localStorage
            const isCollapsed = document.body.classList.contains('sidebar-collapsed');
            localStorage.setItem('sidebarCollapsed', isCollapsed);
        }

        // Ripristina lo stato della sidebar al caricamento
        document.addEventListener('DOMContentLoaded', function() {
            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed) {
                document.body.classList.add('sidebar-collapsed');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
