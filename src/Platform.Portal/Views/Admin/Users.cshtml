@model List<UserListViewModel>

@{
    ViewData["Title"] = "Gestione Utenti";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>
                <span class="material-icons align-middle">people</span>
                Gestione Utenti
            </h1>
        </div>
        <div class="col text-end">
            <a asp-action="CreateUser" class="btn btn-videosystem">
                <span class="material-icons align-middle">person_add</span>
                Nuovo Utente
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Nome Completo</th>
                            <th>Ruolo</th>
                            <th>Stato</th>
                            <th>Data Creazione</th>
                            <th class="text-end">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="material-icons align-middle">account_circle</span>
                                        @user.Username
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.FullName</td>
                                    <td>
                                        <span class="badge @(user.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                            @user.Role
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Attivo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Disattivo</span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditUser" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Modifica">
                                                <span class="material-icons">edit</span>
                                            </a>
                                            
                                            <form asp-action="ToggleUserStatus" asp-route-id="@user.Id" 
                                                  method="post" class="d-inline">
                                                <button type="submit" 
                                                        class="btn btn-sm btn-outline-warning" 
                                                        title="@(user.IsActive ? "Disattiva" : "Attiva")">
                                                    <span class="material-icons">
                                                        @(user.IsActive ? "toggle_on" : "toggle_off")
                                                    </span>
                                                </button>
                                            </form>
                                            
                                            @if (user.Username != User.Identity!.Name)
                                            {
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteModal-@user.Id"
                                                        title="Elimina">
                                                    <span class="material-icons">delete</span>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>

                                <!-- Modal di conferma eliminazione -->
                                <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Conferma Eliminazione</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Sei sicuro di voler eliminare l'utente <strong>@user.Username</strong>?
                                                <br />Questa azione non pu√≤ essere annullata.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                                    <button type="submit" class="btn btn-danger">
                                                        <span class="material-icons align-middle">delete</span>
                                                        Elimina
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">Nessun utente trovato</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
