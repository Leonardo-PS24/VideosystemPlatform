@{
    ViewData["Title"] = "Dashboard";
    ViewData["Subtitle"] = "Benvenuto nella piattaforma Videosystem";
}

<!-- Statistiche in alto -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-success">
                <span class="material-icons">apps</span>
            </div>
            <div class="stat-content">
                <h3 class="stat-value">@Model.Count()</h3>
                <p class="stat-label">Applicazioni Disponibili</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-primary">
                <span class="material-icons">people</span>
            </div>
            <div class="stat-content">
                <h3 class="stat-value">-</h3>
                <p class="stat-label">Utenti Attivi</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-warning">
                <span class="material-icons">access_time</span>
            </div>
            <div class="stat-content">
                <h3 class="stat-value">@DateTime.Now.ToString("HH:mm")</h3>
                <p class="stat-label">Ora Corrente</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon bg-info">
                <span class="material-icons">update</span>
            </div>
            <div class="stat-content">
                <h3 class="stat-value">100%</h3>
                <p class="stat-label">Sistema Online</p>
            </div>
        </div>
    </div>
</div>

<!-- Applicazioni -->
@if (Model.Any())
{
    <div class="section-header mb-3">
        <h2 class="section-title">
            <span class="material-icons align-middle">apps</span>
            Le Tue Applicazioni
        </h2>
        <p class="section-description">Accedi alle applicazioni aziendali disponibili</p>
    </div>
    
    <div class="row g-4">
        @foreach (var app in Model)
        {
            <div class="col-md-4">
                <div class="app-card">
                    <div class="app-card-header">
                        <div class="app-icon">
                            <span class="material-icons">@app.Icon</span>
                        </div>
                        @if (!string.IsNullOrEmpty(app.Badge))
                        {
                            <span class="badge bg-success">@app.Badge</span>
                        }
                    </div>
                    <div class="app-card-body">
                        <h3 class="app-title">@app.Name</h3>
                        <p class="app-description">@app.Description</p>
                        
                        @if (app.RequiredRoles != null && app.RequiredRoles.Any())
                        {
                            <div class="app-roles">
                                <span class="material-icons">verified_user</span>
                                <small>Richiede: @string.Join(", ", app.RequiredRoles)</small>
                            </div>
                        }
                    </div>
                    <div class="app-card-footer">
                        <a href="@app.Url" class="btn btn-primary btn-sm">
                            <span class="material-icons">launch</span>
                            Apri Applicazione
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <span class="material-icons">apps</span>
        </div>
        <h3 class="empty-state-title">Nessuna Applicazione Disponibile</h3>
        <p class="empty-state-description">
            Al momento non ci sono applicazioni configurate. <br>
            Le nuove applicazioni appariranno qui non appena saranno disponibili.
        </p>
        @if (User.IsInRole("Admin"))
        {
            <p class="text-muted mt-3">
                <span class="material-icons align-middle">info</span>
                <small>Le applicazioni possono essere configurate nel file <code>appsettings.json</code></small>
            </p>
        }
    </div>
}

<!-- Informazioni Rapide -->
<div class="row mt-5">
    <div class="col-md-8">
        <div class="info-card">
            <div class="info-card-header">
                <h3>
                    <span class="material-icons">info</span>
                    Informazioni Piattaforma
                </h3>
            </div>
            <div class="info-card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="material-icons text-success">check_circle</span>
                            <div>
                                <strong>Versione</strong>
                                <p class="mb-0">1.0.0</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <span class="material-icons text-success">cloud_done</span>
                            <div>
                                <strong>Stato Sistema</strong>
                                <p class="mb-0">Operativo</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="quick-actions-card">
            <h3 class="mb-3">
                <span class="material-icons">flash_on</span>
                Azioni Rapide
            </h3>
            <div class="d-grid gap-2">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary">
                        <span class="material-icons">people</span>
                        Gestisci Utenti
                    </a>
                    <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-outline-success">
                        <span class="material-icons">person_add</span>
                        Nuovo Utente
                    </a>
                }
                <button type="button" class="btn btn-outline-secondary" onclick="location.reload()">
                    <span class="material-icons">refresh</span>
                    Aggiorna Pagina
                </button>
            </div>
        </div>
    </div>
</div>
