@model List<Platform.Portal.Controllers.ApplicationInfo>

@{
    ViewData["Title"] = "Dashboard";
    ViewData["Subtitle"] = "Benvenuto nella piattaforma interna Videosystem";
}

<!-- Statistiche -->
<div class="row g-4 mb-4 fade-in">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon green">
                <span class="material-icons">apps</span>
            </div>
            <div class="stat-value">@(Model?.Count ?? 0)</div>
            <div class="stat-label">Applicazioni Disponibili</div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon blue">
                <span class="material-icons">people</span>
            </div>
            <div class="stat-value">--</div>
            <div class="stat-label">Utenti Attivi</div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon orange">
                <span class="material-icons">schedule</span>
            </div>
            <div class="stat-value" id="currentTime">--:--</div>
            <div class="stat-label">Ora Corrente</div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="stat-icon green">
                <span class="material-icons">check_circle</span>
            </div>
            <div class="stat-value">100%</div>
            <div class="stat-label">Sistema Online</div>
        </div>
    </div>
</div>

<!-- Applicazioni -->
@if (Model != null && Model.Any())
{
    <div class="row g-4 mb-4">
        @foreach (var app in Model)
        {
            <div class="col-md-6 col-lg-4 fade-in fade-in-delay-@(Model.IndexOf(app) + 1)">
                <div class="app-card">
                    <div class="app-card-header">
                        <div class="app-card-icon">
                            <span class="material-icons">@app.Icon</span>
                        </div>
                        <h5 class="app-card-title">@app.Name</h5>
                    </div>
                    <div class="app-card-body">
                        <p class="app-card-description">@app.Description</p>
                        @if (!string.IsNullOrEmpty(app.RequiredRole))
                        {
                            <div class="mb-3">
                                <span class="badge bg-secondary">
                                    <span class="material-icons align-middle" style="font-size: 14px;">security</span>
                                    @app.RequiredRole
                                </span>
                            </div>
                        }
                    </div>
                    <div class="app-card-footer">
                        <a href="@app.Url" class="btn btn-primary w-100" target="_blank">
                            <span class="material-icons">open_in_new</span>
                            Apri Applicazione
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state fade-in">
        <div class="empty-state-icon">
            <span class="material-icons">inbox</span>
        </div>
        <h3 class="empty-state-title">Nessuna Applicazione Disponibile</h3>
        <p class="empty-state-description">
            Al momento non ci sono applicazioni configurate.<br />
            Contatta l'amministratore per maggiori informazioni.
        </p>
    </div>
}

<!-- Info Card -->
<div class="row g-4">
    <div class="col-md-6 fade-in">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title d-flex align-items-center mb-3">
                    <span class="material-icons text-vs-green me-2">info</span>
                    Informazioni Piattaforma
                </h5>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <strong>Versione:</strong> 1.0.0
                    </li>
                    <li class="mb-2">
                        <strong>Ambiente:</strong> @(System.Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Production")
                    </li>
                    <li class="mb-2">
                        <strong>Stato:</strong> <span class="badge bg-success">Operativo</span>
                    </li>
                    <li>
                        <strong>Ultimo aggiornamento:</strong> 25/11/2024
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    @if (User.IsInRole("Admin"))
    {
        <div class="col-md-6 fade-in fade-in-delay-1">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center mb-3">
                        <span class="material-icons text-vs-green me-2">admin_panel_settings</span>
                        Quick Actions
                    </h5>
                    <div class="d-grid gap-2">
                        <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary">
                            <span class="material-icons align-middle">people</span>
                            Gestisci Utenti
                        </a>
                        <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-outline-success">
                            <span class="material-icons align-middle">person_add</span>
                            Nuovo Utente
                        </a>
                        <button onclick="location.reload()" class="btn btn-outline-secondary">
                            <span class="material-icons align-middle">refresh</span>
                            Aggiorna Pagina
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Aggiorna ora corrente ogni secondo
        function updateTime() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            document.getElementById('currentTime').textContent = `${hours}:${minutes}`;
        }
        
        updateTime();
        setInterval(updateTime, 60000); // Aggiorna ogni minuto
        
        // Animazione card al caricamento
        const cards = document.querySelectorAll('.app-card, .stat-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'all 0.6s ease-out';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 100);
        });
    </script>
}
